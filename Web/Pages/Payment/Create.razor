@page "/payments/create"
@using FutterlisteNg.Data.Model
@using FutterlisteNg.Domain.Service
@using Microsoft.AspNetCore.Components
@inject NavigationManager NavigationManager


<h2>New Payment</h2>

<form>
    <div class="row">
        <div class="input-field col s6">
            <input id="name" type="text" class="validate" @bind="@_payment.PayedBy" />
            <label class="active" for="name">Payed by</label>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s3">
            <input id="shortName" type="text" class="validate" @bind="@_payment.Description" />
            <label class="active" for="shortName">Spent on</label>
        </div>
    </div>

    <button class="btn waves-effect waves-light" type="submit" name="action" onclick="@CreatePayment()">
        Submit
        <i class="material-icons right">send</i>
    </button>
</form>


